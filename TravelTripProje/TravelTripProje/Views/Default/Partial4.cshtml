@using  TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="padding1">
    <h4>Sizin İçin Seçtiklerimiz</h4>
    <div class="box-left">
        @foreach (var x in Model)
        {
            <div class="bot-img">
                <img src="@x.BlogImage" alt="" style="width:120px;height:67px" />
            </div>
            <div class="bot-desc">
                <p><a href="/Blog/BlogDetay/@x.ID" style="color:dimgray">@x.Aciklama.Substring(0, 70)...</a> </p>
            </div>
            <div class="clear"></div>
        }


    </div>

    @Html.Action("Partial5","Default")
</div>
